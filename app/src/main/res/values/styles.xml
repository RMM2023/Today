<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="card_main">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:elevation">32dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <style name="heading">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="data_edit">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_italic</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_info">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
</resources>