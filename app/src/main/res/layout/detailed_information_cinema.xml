<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_green">

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание фильма"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:background="@drawable/line_shape"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="16dp"/>

    <ImageView
        android:id="@+id/image_actor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/view_line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:src="@drawable/kianu"/>

    <TextView
        android:id="@+id/text_name_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/image_actor"
        app:layout_constraintTop_toTopOf="@+id/image_actor"
        android:text="Киану Ривз"
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/text_name_en_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_name_actor"
        app:layout_constraintStart_toEndOf="@+id/image_actor"
        app:layout_constraintEnd_toEndOf="@+id/text_name_actor"
        android:text="Keanu Reeves"
        android:textSize="12sp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/text_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_name_en_actor"
        app:layout_constraintStart_toEndOf="@+id/image_actor"
        app:layout_constraintEnd_toEndOf="@+id/text_name_en_actor"
        android:text="Neo"
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/image_actor_ru"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/view_line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:src="@drawable/ru"/>

    <TextView
        android:id="@+id/image_actor_voiceover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/image_actor_ru"
        app:layout_constraintTop_toTopOf="@+id/image_actor"
        android:text="Всеволод Кузнецов"
        android:textSize="14sp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>